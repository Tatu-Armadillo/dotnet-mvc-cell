@model List<cell.Models.Cell>;
@{
    ViewData["Title"] = "View Cell";
}

<div class="d-flex justify-content-between m-2">
    <div class="col-9">
        <h2>Celulares</h2>
    </div>
    <div class="col-3 d-flex align-items-center justify-content-center">
        <a asp-action="Create" asp-controller="Cell" class="btn btn-success">Create</a>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center">
    <table class="table text-center">
        <thead>
            <td>Id</td>
            <td>Marca</td>
            <td>Modelo</td>
            <td>Cor</td>
            <td>Tela</td>
            <td>Camera</td>
            <td>Memoria</td>
            <td>Bateria</td>
            <td>Actions</td>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Marca</td>
                    <td>@item.Modelo</td>
                    <td>@item.Cor</td>
                    <td>@item.Tela</td>
                    <td>@item.Camera</td>
                    <td>@item.Memoria</td>
                    <td>@item.Bateria</td>
                    <td>
                        <div class="d-flex justify-content-around">
                            <a asp-action="Edit" asp-controller="Cell" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="Delete" asp-controller="Cell" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>

</div>