@model cell.Models.Cell;

@{
    ViewData["Title"] = "Delete Cell";
}

<form asp-action="Delete" asp-area="Cell" method="post">
    <input type="hidden" asp-for="Id">
    <div class="row">
        <div class="input-group mb-3">
            <label class="input-group-text">Marca:</label>
            <input asp-for="Marca" class="form-control" type="text" placeholder="Marca" />
        </div>
        <div class="input-group mb-3">
            <label class="input-group-text">Modelo:</label>
            <input asp-for="Modelo" class="form-control" type="text" placeholder="Modelo" />
        </div>
        <div class="input-group mb-3">
            <label class="input-group-text">Cor:</label>
            <input asp-for="Cor" class="form-control" type="text" placeholder="Cor" />
        </div>
        <div class="input-group mb-3">
            <label class="input-group-text">Tela:</label>
            <input asp-for="Tela" class="form-control" type="text" placeholder="Tela" />
        </div>
        <div class="input-group mb-3">
            <label class="input-group-text">Camera:</label>
            <input asp-for="Camera" class="form-control" type="text" placeholder="Camera" />
        </div>
        <div class="input-group mb-3">
            <label class="input-group-text">Memoria:</label>
            <input asp-for="Memoria" class="form-control" type="text" placeholder="Memoria" />
        </div>
        <div class="input-group mb-3">
            <label class="input-group-text">Bateria:</label>
            <input asp-for="Bateria" class="form-control" type="text" placeholder="Bateria" />
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="col-6 d-flex justify-content-end">
            <button type="submit" class="btn btn-danger">Delete Cell</button>
        </div>
        <div class="col-6 d-flex justify-content-start">
            <a asp-action="Index" asp-controller="Cell" class="btn btn-primary">Retornar</a>
        </div>
    </div>
</form>